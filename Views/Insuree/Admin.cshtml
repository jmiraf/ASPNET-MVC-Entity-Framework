@using CarInsurance.Models
@model List<Table>

@{
    ViewBag.Title = "Admin";
}

<h2>Admin</h2>

<div class="card">
    <div class="card-header">
        <h3>Quotes Table</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email Address</th>
                <th>Birthdate</th>
                <th>Age</th>
                <th>Car Make</th>
                <th>Tickets</th>
                <th>Quote</th>
            </tr>
            @foreach (var qlist in Model)
            {
                <tr>
                    <td>@qlist.FirstName</td>
                    <td>@qlist.LastName</td>
                    <td>@qlist.EmailAddress</td>
                    <td>@qlist.DateOfBirth</td>
                    <td>@qlist.age</td>
                    <td>@qlist.CarMake | @qlist.CarModel | @qlist.CarYear</td>
                    <td>@qlist.SpeedingTickets</td>
                    <td>$ @qlist.Quote</td>
                </tr>
            }
            </table>

    </div>
</div>
